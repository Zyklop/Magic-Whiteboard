<Window x:Class="HSR.PresWriter.Gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PresentationWriter" Height="200" Width="800" WindowStyle="None" ResizeMode="NoResize"
        WindowStartupLocation="Manual" Left="0" Top="500" Topmost="True">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ComboBox Name="CameraBox" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Content="Show Camera Config" HorizontalAlignment="Center" VerticalAlignment="Center" Click="ShowConfig" Grid.Row="1"/>
        <ToggleButton Name="MirrorBtn" Content="Mirror Camera" Click="MirrorCam" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2"/>
        <Image Name="CameraImage" MouseUp="ShowImage" MaxHeight="200" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.RowSpan="3" Grid.Column="2"/>
    </Grid>
</Window>
